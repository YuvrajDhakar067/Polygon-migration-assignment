# =============================================================================
# Polygon Migration Tool - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# IMPORTANT: Never commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Django Settings
# -----------------------------------------------------------------------------

# Generate a new secret key for production:
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-generate-a-new-one

# Set to True for development, False for production
DEBUG=True

# Comma-separated list of allowed hosts
# For local development: localhost,127.0.0.1
# For production: your-domain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
#
# Local setup with Docker:
#   docker run --name polygon-postgres -e POSTGRES_PASSWORD=postgres -e POSTGRES_DB=polygon_migration -p 5432:5432 -d postgres:15
#
# Then use these settings:
DB_NAME=polygon_migration
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# -----------------------------------------------------------------------------
# Redis Cache
# -----------------------------------------------------------------------------
#
# Local setup with Docker:
#   docker run --name polygon-redis -p 6379:6379 -d redis:7
#
# Then use these settings:
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_SSL=False

# For Azure Redis or other cloud Redis with SSL:
# REDIS_HOST=your-redis.redis.cache.windows.net
# REDIS_PORT=6380
# REDIS_PASSWORD=your-redis-password
# REDIS_SSL=True

# -----------------------------------------------------------------------------
# Polygon API Credentials
# -----------------------------------------------------------------------------
#
# Get your API credentials from Polygon:
# 1. Log in to https://polygon.codeforces.com/
# 2. Go to Settings (top-right menu)
# 3. Find "API" section
# 4. Generate new API key
#
POLYGON_API_KEY=your-polygon-api-key
POLYGON_API_SECRET=your-polygon-api-secret

